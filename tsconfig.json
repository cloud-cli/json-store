{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": false,
    "types": ["node", "firebase"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["app/**/*.ts"],
  "files": ["app/index.ts"]
}
